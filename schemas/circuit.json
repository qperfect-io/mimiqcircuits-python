{
    "$schema": "http://json-schema.org/schema#",
    "title": "Quantum Circuit",
    "description": "Validation of a general Quantum Circuit",
    "type": "object",
    "properties": {
        "gates": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "enum": [
                            "X",
                            "Y",
                            "Z",
                            "H",
                            "S",
                            "SDG",
                            "T",
                            "TDG",
                            "SX",
                            "SXDG",
                            "ID",
                            "P",
                            "RX",
                            "RY",
                            "RZ",
                            "R",
                            "U1",
                            "U2",
                            "U2DG",
                            "U3",
                            "U",
                            "CX",
                            "CY",
                            "CZ",
                            "CH",
                            "SWAP",
                            "ISWAP",
                            "ISWAPDG",
                            "CP",
                            "CRX",
                            "CRY",
                            "CRZ",
                            "CU",
                            "CCX",
                            "CSWAP",
                            "Custom"
                        ]
                    },
                    "targets": {
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    "params": {
                        "type": "array"
                    }
                },
                "required": [
                    "name",
                    "targets"
                ]
            }
        }
    },
    "required": [
        "gates"
    ]
}
